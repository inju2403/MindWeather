<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Date_TextView_style">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanumsquareroundr</item>
        <item name="android:textColor">@color/brownColor</item>
        <item name="android:text"> 0418 </item>
    </style>

    <style name="Time_TextView_style">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanumsquareroundr</item>
        <item name="android:textColor">@color/brownColor</item>
        <item name="android:text"> 07:50 </item>
    </style>

    <style name="DayOfTheWeek_TextView_style">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanumsquareroundr</item>
        <item name="android:textColor">@color/brownColor</item>
        <item name="android:text"> WED </item>
    </style>

    <style name="Summary_TextView_style">
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanumsquareroundr</item>
        <item name="android:textColor">@color/brownColor</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text"> Summary </item>
    </style>

    <style name="Contents_TextView_style">
<!--        <item name="">@color/colorPrimary</item>-->
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">top</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanumsquareroundr</item>
        <item name="android:textColor">@color/brownColor</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:maxLines">100</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text"> Contents </item>
    </style>

    <style name="Edit_And_Detail_Title_TextView_style">
        <!--        <item name="">@color/colorPrimary</item>-->
        <item name="android:layout_margin">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">top</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/nanumpen</item>
        <item name="android:textColor">@color/brownColor</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:maxLines">100</item>
        <item name="android:ellipsize">end</item>
        <item name="android:text"> Contents </item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/brownColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="GraphTabLayoutStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="fontFamily">@font/nanumbarunpenb</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="tabIndicatorColor">@color/brownColor</item>
        <item name="tabTextColor">@color/liteGreyColor</item>
        <item name="tabSelectedTextColor">@color/brownColor</item>
    </style>

</resources>
